        <description value="LOINC codes"/>
        <valueSetReference>
          <reference value="http://hl7.org/fhir/ValueSet/report-codes"/>
        </valueSetReference>
      </binding>
      <mapping>
        <identity value="argonaut-dq-dstu2"/>
        <map value="DiagnosticReport.code"/>
      </mapping>
    </element>
